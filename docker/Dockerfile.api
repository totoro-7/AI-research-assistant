FROM python:3.10-slim

WORKDIR /app
RUN apt-get update && apt-get install -y build-essential && rm -rf /var/lib/apt/lists/*

COPY requirements.txt .
# Backend needs: torch, transformers, flask, pyyaml (you already have them in requirements.txt)
RUN pip install --no-cache-dir -r requirements.txt

COPY . .

# CPU for PoC; switch to cuda later if needed
ENV MODEL_NAME=gpt2
ENV DEVICE=cpu
ENV MAX_TOKENS=256

EXPOSE 5000
CMD ["python", "-m", "app.server_flask"]