FROM python:3.10-slim

WORKDIR /app
RUN apt-get update && apt-get install -y build-essential && rm -rf /var/lib/apt/lists/*

COPY requirements.txt .
# UI needs streamlit + requests. If theyâ€™re in requirements.txt, this installs them.
RUN pip install --no-cache-dir -r requirements.txt streamlit requests

COPY . .

# Point the UI to the API hostname on the docker network: http://api:5000
ENV API_BASE=http://api:5000

EXPOSE 8501
CMD ["streamlit", "run", "streamlit_app.py", "--server.port", "8501", "--server.address", "0.0.0.0"]